<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pyjava.daily.view.newdialog.NewDialogView">
    <top>
        <GridPane hgap="5" vgap="5">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <Label text="daily name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="dailyName" GridPane.hgrow="ALWAYS" promptText="please enter daily name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="daily location" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="dailyLocation" GridPane.hgrow="ALWAYS" promptText="please enter daily location" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button text="..." GridPane.columnIndex="9" GridPane.rowIndex="2" onAction="#openDirectory"/>
        </GridPane>
    </top>
    <bottom>
        <HBox
                spacing="10"
                alignment="CENTER_RIGHT"
                StackPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="确定" onAction="#submit"/>
            <Button text="取消" onAction="#cancel"/>
        </HBox>
    </bottom>
</BorderPane>
